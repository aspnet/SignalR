{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "outDir": "./obj/js",
    "baseUrl": ".",
    "paths": {
      "@aspnet/signalr": [ "../signalr/dist/esm/index" ],
      "@aspnet/signalr-protocol-msgpack": [ "../signalr-protocol-msgpack/dist/esm/index" ]
    },
    "lib": [ "es2015.promise", "es5", "dom", "es2015.collection" ]
  },
  "include": [
    "./ts/**/*",
    "../signalr/dist/esm/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "wwwroot",
    "js"
  ]
}
